#!/usr/bin/env bash

# Script that runs all unit tests.

action() {
    local this_file="$( [ ! -z "$ZSH_VERSION" ] && echo "${(%):-%x}" || echo "${BASH_SOURCE[0]}" )"
    local this_dir="$( cd "$( dirname "$this_file" )" && pwd )"
    local ap_dir="$( dirname "$this_dir" )"

    # dev flag for sandboxes
    local dev="$( $AP_DEV && echo "_dev" || echo "" )"

    # helper to run a test
    run_test() {
        local mod="$1"
        local sandbox="$2"

        if [ -z "$sandbox" ]; then
            echo "testing $mod ..."
            ( cd "$ap_dir"; python -m unittest "$mod" )
        else
            echo "testing $mod in sandbox $sandbox ..."
            ( cd "$ap_dir"; bash -c "source sandboxes/$sandbox && python -m unittest $mod" )
        fi
    }

    # start tests and keep track of immediate and global return values
    local gret="0"
    local ret

    # test_util
    run_test tests.test_util
    ret="$?"
    [ "$gret" = "0" ] && gret="$ret"

    # test_columnar_util
    run_test tests.test_columnar_util "venv_columnar${dev}.sh"
    ret="$?"
    [ "$gret" = "0" ] && gret="$ret"

    return "$gret"
}
action "$@"
